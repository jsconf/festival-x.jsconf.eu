{% extends "../layouts/default.html.njk" %}

{% block bodyclass %}page-sponsors{% endblock %}

{% block header %}
  {% if page.metadata.title  %}
    <section class="grid">
      <div class="grid-item-sponsor">
        <h1 class="tl">
          {{ page.metadata.title }}
        </h1>
      </div>
    </section>
  {% endif %}
{% endblock %}

{% block content %}
  <section class="grid">
    <div class="grid-item-sponsor md-content">
      {{ contents.copy.sponsors['sponsors.md'].html }}
    </div>
  </section>
  {% include "../partials/sponsors-grid.html.njk" %}
{% endblock %}

{% block footer %}
  {% include "../partials/footer-small.html.njk" %}
{% endblock %}
